<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "edit", edit_post_path(@post), :class => 'btn btn-warning' %>
<%= link_to "destroy", post_path(@post), method: :delete, data:
{confirm: "Are you shure?"}, :class => 'btn btn-danger' %>
<hr>
<h2>The list of all comments</h2>
<% @post.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
  </div>
<% end %>
<hr>
<h2>Adding new comment</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    User<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Text of the comment<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Add comment", {:class => 'btn btn-warning'}) %>
  </p>
<% end %>
